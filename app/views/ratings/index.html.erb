<p id="notice"></p>

<div class="row">
<div class="col-sm-12">
<h1>Ratings</h1>

<div class="row">
    <div class="col-4 col-sm-4">

<h2>Best wines</h2>

<%= render 'average', items: @top_wines %>

</div>
<div class="col-4 col-sm-4">

<h2>Best wineries</h2>

<%= render 'average', items: @top_wineries %>

</div>
<div class="col-4 col-sm-4">

<h2>Best styles</h2>

<%= render 'average', items: @top_styles %>

</div>
</div>
</div>
</div>

<h2>Most active users</h2>

<%= render 'ratings', items: @top_users %>

<h2>Recent ratings</h2>

<ul>
    <% @ratings.recent.each do |rating| %>
        <li> <%= rating %> by <%= link_to rating.user.username, user_path(rating.user.id) %> <%= rating.created_at %></li>      
    <% end %>
</ul>

<p><%= link_to 'New Rating', new_rating_path, class: "btn btn-primary" %></p>