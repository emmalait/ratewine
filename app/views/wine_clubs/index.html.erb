<p id="notice"></p>

<h1>Wine Clubs</h1>

<p>
  <table class="table table-hover">
    <thead>
      <tr>
        <th><%= link_to 'Name', wine_clubs_path(order:"name") %></th>
        <th><%= link_to 'Founded', wine_clubs_path(order:"year") %></th>
        <th><%= link_to 'City', wine_clubs_path(order:"city") %></th>
      </tr>
    </thead>

    <tbody>
      <% @wine_clubs.each do |wine_club| %>
        <tr>
          <td><%= link_to wine_club.name, wine_club %></td>
          <td><%= wine_club.founded %></td>
          <td><%= wine_club.city %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</p>

<p><%= link_to('New Wine Club', new_wine_club_path) if current_user %></p>
